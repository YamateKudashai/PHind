{
    "name": "phind/semantic-search",
    "description": "Advanced semantic search package with vector similarity for Laravel applications",
    "keywords": ["laravel", "search", "semantic", "vector", "embeddings", "ai", "machine learning"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Wesley Scholl",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0",
        "illuminate/contracts": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.4.4",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0"
    },
    "suggest": {
        "meilisearch/meilisearch-php": "For Meilisearch vector database support",
        "qdrant/qdrant-php": "For Qdrant vector database support",
        "pgvector/pgvector": "For PostgreSQL pgvector support",
        "openai-php/client": "For OpenAI embeddings",
        "predis/predis": "For Redis caching support"
    },
    "autoload": {
        "psr-4": {
            "Phind\\SemanticSearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phind\\SemanticSearch\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Phind\\SemanticSearch\\SemanticSearchServiceProvider"
            ],
            "aliases": {
                "SemanticSearch": "Phind\\SemanticSearch\\Facades\\SemanticSearch"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}